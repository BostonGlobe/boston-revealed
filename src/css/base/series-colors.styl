// for part, color in $topic-colors
.{part}
	.intro
		background-color color
	.g-header
		background-color lighten(color, 5)
		&.nav-open .g-nav__btn
			background-color lighten(color, 5)
		hr
			border-color color
		.skimmer
			background-color lighten(color, 5)
			border-top 5px solid darken(color, 5)
		.skimmer-overlay
			background-color lighten(color, 5)
			border-top 5px solid darken(color, 5)

