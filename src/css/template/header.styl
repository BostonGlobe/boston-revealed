// Header Colorizer Mixin
// gives accessible foreground color based on bg color
            
header-color(bgcolor)
    background-color bgcolor
    if lightness(bgcolor) < 51%
        color white
        svg
            fill white
    if lightness(bgcolor) < 61%
        &__title a
            color white
    else
        color #222
        svg
            fill #222

.g-header
    width 100%
    padding 2em 1.3em 0
    color #000
    // header-color(#DFE6E3)
    background-color primaryColor
    +mq('bp-2')
        padding 3em
        
    &__inner
        display flex
        position relative
        a
            opacity .75
            transition .2s ease all
            &:hover
                opacity 1
    &__title
        text-align center
        letter-spacing .01em
        font-size .9rem
        margin .75em auto 0
        
    &__logo
        top 0
        position absolute
        
    &__share
        top 0
        right 0
        position absolute
        a
            text-decoration none
            
    &__share-button
        margin-left 15px
    
.menu-btn
    position absolute
    top 0
    left 0
    background-color transparent
    border none

